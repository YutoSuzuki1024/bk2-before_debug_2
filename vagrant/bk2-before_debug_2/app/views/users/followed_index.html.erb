<h2>Follower Users</h2>

<% if @user.followed.count == 0 %>
	<p>ユーザーはいません</p>
<% else %>
	<table class="table">
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @the_users.each do |the_user| %>
				<tr>
					<td><%= attachment_image_tag(the_user.follower, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
						<td><%= the_user.follower.name %></td>
						<td>フォロー数：<%= the_user.follower.follower.count %></td>
						<td>フォロワー数：<%= the_user.follower.followed.count %></td>
						<td><%= link_to "Show", user_path(the_user.follower), class: "user_#{@user.id}" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>